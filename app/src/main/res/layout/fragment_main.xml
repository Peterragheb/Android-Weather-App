<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_first_city"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="CAIRO, EG"
        android:textSize="42sp"
        android:fontFamily="@font/aragon_sans_bold"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/blue_grey"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:baselineAligned="false"
        android:background="@android:drawable/divider_horizontal_bright"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_second_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="LONDON, UK"
            android:textSize="24sp"
            android:fontFamily="@font/aragon_sans_bold"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/blue_grey"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:baselineAligned="false"
            android:background="@android:drawable/divider_horizontal_bright"/>
        <TextView
            android:id="@+id/tv_third_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="BARCELONA, SP"
            android:textSize="24sp"
            android:fontFamily="@font/aragon_sans_bold"
            android:textColor="@color/blue_grey"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:baselineAligned="false"
        android:background="@android:drawable/divider_horizontal_bright"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_fourth_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PARIS, FR"
            android:textSize="24sp"
            android:fontFamily="@font/aragon_sans_bold"
            android:textColor="@color/blue_grey"
            android:background="?android:attr/selectableItemBackground"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:baselineAligned="false"
            android:background="@android:drawable/divider_horizontal_bright"/>
        <TextView
            android:id="@+id/tv_fifth_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MUNICH, GR"
            android:textSize="24sp"
            android:fontFamily="@font/aragon_sans_bold"
            android:textColor="@color/blue_grey"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>
</LinearLayout>