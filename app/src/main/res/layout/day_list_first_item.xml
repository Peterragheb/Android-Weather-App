<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_message"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="32sp"
        android:fontFamily="@font/halisgr_regular"
        android:textStyle="bold"
        android:textColor="@color/blue_grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_sun_rise"
            android:tint="@color/blue_grey" />
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:textSize="21sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/halisgr_regular"
            android:text="Sunny"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:fontFamily="@font/halisgr_regular"
        android:text="Current Temp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_tempHigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="32sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/orange"
                    android:text="20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/orange"
                    android:text="@string/main_step1"/>

    </LinearLayout>
</LinearLayout>